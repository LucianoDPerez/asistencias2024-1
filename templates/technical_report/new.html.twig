{% extends 'admin/bars.html.twig' %}

{% block contenpage %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h5><a href="{{ path('app_service_index') }}">Descargos</a> >> Nuevo Descargo</h5>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Nuevo Descargo</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="service-info card p-3 mb-3">
                        <div class="row">
                            <div class="col">
                                <span><strong>Cliente:</strong> {{ service.client.name }}</span>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col">
                                <span><strong>Problema:</strong> {{ service.description }}</span>
                            </div>
                        </div>
                    </div>

                    <div class="x_content">
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.content) }}
                            {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.closed) }}
                            {{ form_widget(form.closed, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="ln_solid"></div>
                        <div class="item form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <a class="btn btn-warning" href="{{ path('app_technicalreport_index') }}">Cancelar</a>
                                <button type="submit" name="valider" class="btn btn-success">Aceptar</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}